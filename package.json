{
  "name": "gameboard-app",
  "version": "0.7.0",
  "license": "MIT",
  "repository": "github:dwmkerr/gameboard",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "npm run lint && npm test && standard-version",
    "preversion": "echo 'Version with \"npm run release\"' && exit 1"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!mobx-react|native-base|react-native|react-navigation|react-native-firebase|apsl-react-native-button,react-clone-referenced-element)"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./artifacts/coverage",
    "verbose": true,
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "output": "./artifacts/tests/junit.xml"
  },
  "dependencies": {
    "buffer": "^5.1.0",
    "events": "^3.0.0",
    "firebase": "^5.5.0",
    "moment": "^2.20.1",
    "native-base": "^2.4.5",
    "prop-types": "^15.6.0",
    "react": "^16.3.1",
    "react-native": "^0.55.4",
    "react-native-drawer": "^2.5.0",
    "react-native-firebase": "^4.0.0",
    "react-native-google-signin": "^0.12.0",
    "react-native-keyboard-aware-scroll-view": "^0.5.0",
    "react-native-modal-datetime-picker": "^6.0.0",
    "react-native-rename": "^2.2.2",
    "react-native-router-flux": "^4.0.1",
    "react-native-side-menu": "^1.1.3",
    "react-native-tab-view": "1.0.0",
    "react-native-testfairy": "^2.6.0",
    "react-native-vector-icons": "^5.0.0",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-form": "^7.2.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.1.0",
    "regenerator-runtime": "^0.11.1",
    "stream": "0.0.2",
    "timers": "^0.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "app-icon": "^0.6.3",
    "babel-core": "^6.17.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "22.4.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react-native": "4.0.0",
    "babel-register": "^6.16.3",
    "create-react-class": "^15.6.3",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.2.1",
    "jest": "^22.0.4",
    "jest-junit": "^5.0.0",
    "jest-react-native": "^18.0.0",
    "react-test-renderer": "^16.4.1",
    "standard-version": "^4.4.0"
  }
}
